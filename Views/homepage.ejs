<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Itim&display=swap" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        /* General body styling */
        body {
            background: linear-gradient(to bottom right, #46656F, #8FABB7, #D8DFE5, #FBFBFB);
            color: white;
            font-family: 'Itim', cursive, sans-serif;
            text-align: center;
        }

        /* Styling for the book container and flipping book pages */
        #book-container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            perspective: 2000px;
        }

        #book {
            width: 100%;
            height: 500px;
            /* Slightly increased height for better proportions */
            position: relative;
            transform-style: preserve-3d;
        }

        /* Pages */
        .page {
            width: 50%;
            height: 100%;
            position: absolute;
            top: 0;
            transform-origin: center right;
            backface-visibility: hidden;
            background: white;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            transition: transform 0.6s ease-in-out;
            border: 10px 8FABB7;
            /* Set consistent border */
            border-radius: 10px;
            /* Smooth rounded corners */
        }

        .page.right {
            left: 50%;
            transform-origin: center left;
        }

        .page img {
            width: 100%;
            /* Ensure image fits the width */
            height: 100%;
            /* Ensure image fits the height */
            object-fit: fill;
            /* Stretch image to fill the page exactly */
        }

        .page.flipped {
            transform: rotateY(-180deg);
        }

        /* Ensures proper z-index stacking for flipped pages */
        .page {
            z-index: 0;
        }

        .page.flipped {
            z-index: 1;
            /* Ensure flipped pages stay visible */
        }


        /* Welcome text styling */
        welcom3 {
            font-family: 'Itim', cursive, sans-serif;
            text-align: center;
            font-size: 70px;
            font-weight: bold;
            color: #e7eff3;
        }

        .navbar {
            margin-top: 50px;
            margin-left: 30px;
            margin-right: 30px;
            margin-bottom: 100px;
            border-radius: 10px;
            height: 100px;
            background-color: #8FABB7 !important;
            display: flex;

            align-items: center;
        }

        .navbar-brand {
            font-size: 40px;
            font-weight: bold;
            color: #fefafa;
        }

        .navbar img {
            width: 50px;
            height: 50px;

        }

        /* About Us section styling */
        .circle {
            width: 600px;
            height: 600px;
            background-color: #46656F;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 24px;
            font-weight: bold;
            margin-top: 50px;
            border-radius: 50%;
            text-align: center;
            padding: 30px;
            word-wrap: break-word;
            line-height: 1.4;
            max-width: 90%;
            max-height: 90%;
            overflow: hidden;
        }

        .circle span {
            font-size: 48px;
            font-weight: 700;
            margin-top: 10px;
        }

        .circle p {
            font-size: 20px;
            font-weight: 400;
            margin-top: 20px;
            text-align: center;
            line-height: 1.6;
        }

        /* Login section styling */
        .square {
            width: 600px;
            height: 400px;
            background-color: #46656F;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 20px;
            font-weight: bold;
            margin-left: 60px;
            margin-right: 60px;
            border-radius: 20px;
            padding: 30px;
            text-align: center;
            gap: 15px;
            position: relative;
        }

        .square input {
            width: 95%;
            height: 50px;
            padding: 10px;
            margin: 10px 0;
            background-color: #f4ecf8;
            border: none;
            border-radius: 5px;
            color: #8585C3;
            font-size: 18px;
        }

        .square input:focus {
            border: 2px solid #2B204B;
            outline: none;
        }

        .square input::placeholder {
            color: #8FABB7;
            opacity: 1;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
            gap: 10px;
        }

        .square button {
            width: 48%;
            padding: 20px;
            margin-top: 15px;
            background-color: transparent;
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 18px;
            cursor: pointer;
        }

        .square button:hover {
            background-color: #D8DFE5;
        }

        .square h3 {
            font-size: 40px;
            margin-bottom: 20px;
            color: #D8DFE5;
        }

        .main-content {
            display: flex;
            justify-content: space-evenly;
            align-items: center;
            gap: 30px;
            margin-top: 50px;
            position: relative;
        }

        /* Footer section styling */
        .footer {
            display: flex;
            justify-content: space-between;
            /* Keeps left and right sections */
            align-items: center;
            /* Aligns items in the center vertically */
            padding: 20px;
            background-color: #46656F;
            color: white;
            position: relative;
            margin-top: 30px;
        }

        .footer-left,
        .footer-right {
            width: 50%;
        }

        .footer .footer-left {
            max-width: 500px;
            text-align: left;
            display: flex;
            flex-direction: column;
            width: 100%;
            align-items: center;
            padding: 20px;
            padding-left: 150px;
        }

        .footer .footer-left input[type="email"],
        .footer .footer-left placeholder {
            width: 500px;
            height: 50px;
            padding: 10px;
            margin: 5px 0;
            background-color: #f4ecf8;
            border: none;
            border-radius: 5px;
            color: #8FABB7;
            font-size: 18px;
        }

        .footer .footer-left textarea {
            width: 500px;
            /* Match the width of the email input */
            height: 100px;
            /* Adjust height as needed */
            padding: 10px;
            margin: 5px 0;
            background-color: #f4ecf8;
            border: none;
            border-radius: 5px;
            color: #8FABB7;
            font-size: 18px;
            resize: none;
            /* Disable resizing for consistent design */
            box-sizing: border-box;
            /* Ensure padding is included in the width */
        }

        .footer .footer-left button {
            width: 100px;
            padding: 20px;
            margin-top: 15px;
            background-color: #8FABB7;
            border: none;
            border-radius: 15px;
            color: white;
            font-size: 18px;
            cursor: pointer;
            text-align: center;
        }

        .footer .footer-left button:hover {
            background-color: #8FABB7;
        }

        .footer-left text {
            text-align: center;
            color: #f2eded;
            font-size: 40px;
        }

        .footer-right {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            padding-right: 150px;



        }

        .footer p {
            position: absolute;
            bottom: 10px;
            /* Adjust based on padding */
            left: 50%;
            transform: translateX(-50%);
            font-size: 14px;
            text-align: center;
        }

        /* Contact section phone area styling */
        .phone-area {
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            /* Push content to the bottom */
            align-items: center;
            /* Center horizontally */
            background-image: url('phone.png');
            /* Replace with your photo URL */
            background-size: cover;
            /* Cover the entire circle */
            background-position: center;
            /* Center the image */
            border-radius: 50%;
            width: 300px;
            height: 300px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            /* Subtle shadow */
            position: relative;
            /* Needed for precise positioning of elements */
        }

        .phone-number {
            position: absolute;
            /* Place it relative to the circle */
            bottom: 15px;
            /* Adjust this to move closer or farther from the edge */
            text-align: center;
            /* Ensure the number is centered */
        }

        .phone-number p {
            color: black;
            font-size: 18px;
            font-weight: bold;
            margin: 0;
            /* No extra space */
        }


        /* Icon styling for the login square */
        .img-person-icon {
            position: absolute;
            top: -45px;
            /* Moves the icon halfway out of the square */
            left: 50%;
            /* Centers the icon horizontally relative to the square */
            transform: translate(-50%, 0);
            /* Centers the icon perfectly */
            width: 90px;
            /* Ensures good visibility */
            height: 90px;
            background-color: transparent;
            border-radius: 50%;
            z-index: 10;
            /* Keeps the icon above other elements */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            /* Optional shadow */
        }

        /* Popup error styling */
        .popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #8FABB7;
            padding: 20px;
            border: 1px solid #8FABB7;
            color: #842029;
            font-family: Arial, sans-serif;
            border-radius: 5px;
            z-index: 1000;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .popup.show {
            display: block;
        }
    </style>
</head>

<body>
    <header>
        <!-- Navigation bar -->
        <nav class="navbar navbar-expand-lg">
            <img src="/Final.jpg" alt=" Icon" class="mr-3"
                style="background-color: transparent; width: 80px; height: 80px; border-radius: 100%;">

            <a class="navbar-brand">BookCloud: Virtual Bookshelf Organizer</a>
        </nav>
    </header>

    <!-- Welcome text -->
    <welcom3> Welcome to BOOKCLOUD : Virtual Bookshelf Organizer</welcom3>

    <div class="container my-5">
        <h1 class="text-center">Flipping Book</h1>
        <p class="text-center"> Comence your journey by fliping throught Our collection
            or backward.</p>
        <main>
            <!-- Flipping Book Container -->
            <div id="book-container">
                <div id="book">
                    <% images.forEach((image, index)=> { %>
                        <div class="page <%= index % 2 === 0 ? 'left' : 'right' %>" id="page<%= index + 1 %>">
                            <img src="<%= image.image %>" alt="Page <%= index + 1 %>">
                        </div>
                        <% }) %>
                </div>
            </div>
    </div>

    <main class="main-content">
        <!-- Circle -->
        <div class="circle rounded-circle">
            <span>About Us</span>
            <p>
                We aim to provide our users with the best online bookshelf experience by seamlessly organizing their
                book collection in a user-friendly platform, making it easier to manage, discover, and enjoy their
                favorite books at any time. Our service allows for easy categorization, personalized recommendations,
                and a visually appealing interface, helping users stay organized while uncovering new titles, tracking
                their reading progress, and sharing their collections with others.
            </p>
        </div>

        <div style="position: relative;">
            <!-- Person Icon on Login -->
            <img src="/webPersonF.jpg" alt="Person Icon" class="img-person-icon">
            <div class="square">
                <h3 class="login-header">Login</h3>
                <form action="/api/users/logIn" method="POST">
                    <input type="text" id="username" name="username" placeholder="Enter your username" required>
                    <input type="password" id="password" name="password" placeholder="Enter your password" required>
                    <div class="button-container">
                        <button type="submit">Sign In</button>
                        <button type="button" onclick="window.location.href='/api/users/signUp'">Sign Up</button>


                    </div>
                </form>
                <!-- Error Popup -->
                <% if (error) { %>
                    <div class="popup show" id="errorPopup">
                        <p>
                            <%= error %>
                        </p>
                    </div>
                    <% } %>

                        <script>
                            // Close popup after a few seconds
                            setTimeout(() => {
                                const popup = document.getElementById('errorPopup');
                                if (popup) {
                                    popup.classList.remove('show');
                                }
                            }, 3000); // 3 seconds
                        </script>

            </div>
        </div>
    </main>
    <!-- Footer Section -->
    <footer class="footer">
        <div class="footer-left">
            <text>Contact Us</text>
            <input type="email" placeholder="Enter your email or username" required>
            <textarea placeholder="Write your message here" rows="4" required></textarea>
            <button type="submit">Submit</button>
        </div>
        <div class="footer-right">
            <div class="phone-area">
                <div class="phone-number">
                    <p>Call Us: <strong>78892244</strong></p>
                </div>
            </div>
        </div>
        <p>Â© 2024 BookCloud. All Rights Reserved.</p>
    </footer>
    <script>
        const pages = document.querySelectorAll('.page');

        /// Function to reset all pages (reopen the book)
        const resetBook = () => {
            pages.forEach((page) => {
                page.classList.remove('flipped');
                page.style.zIndex = ''; // Reset stacking
            });
        };

        // Function to check if all pages are flipped
        const checkAllFlipped = () => {
            return Array.from(pages).every((p) => p.classList.contains('flipped'));
        };

        // Function to check if all pages are unflipped
        const checkAllUnflipped = () => {
            return Array.from(pages).every((p) => !p.classList.contains('flipped'));
        };

        // Add click events to each page
        pages.forEach((page, index) => {
            page.addEventListener('click', () => {
                // Flip the clicked page
                page.classList.toggle('flipped');
                page.style.zIndex = pages.length - index; // Ensure proper stacking

                // Check if all pages are flipped
                if (checkAllFlipped()) {
                    // Reset all pages after a short delay when fully flipped
                    setTimeout(resetBook, 1000);
                }

                // Check if all pages are unflipped
                if (checkAllUnflipped()) {
                    // Reset z-index for all pages when fully unflipped
                    pages.forEach((p) => {
                        p.style.zIndex = '';
                    });
                }
            });
        });
    </script>
</body>

</html>